<div class="container">
  <div class="col-sm-offset-2 col-sm-10">
    <h2> Add New Task Entry: </h2>
  </div>
  <%= form_for @task_entry, url: {action: "create"}, html: {class: "form-horizontal"} do |f| %>
    <div class="form-group">
      <div class="col-sm-2 control-label">
        <%= label_tag "Task Name:"%>
      </div>
      <div class="col-sm-10">
        <%= select_tag :task, options_for_select(Task.where(user_id: current_user.id).pluck(:task_name)), :class => "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%=f.label 'Note', :class => "col-sm-2 control-label"%>
      <div class="col-sm-10">
        <%=f.text_area :note, :class => "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%=f.submit "Start Timer", :class => "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div> 


