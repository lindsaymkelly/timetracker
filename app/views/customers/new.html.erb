<h2> Add Customer: </h2>
<%= form_for @customer, url: {action: "create"} do |f| %>
  <%=f.label 'Company Name:' %>
  <%=f.text_field :company %>
  <%=f.label 'Address:' %>
  <%=f.text_field :address %>
  <%=f.label 'City:' %>
  <%=f.text_field :city %>
  <%=f.label 'State:' %>
  <%=f.text_field :state %>
  <%=f.label 'Zip:' %>
  <%=f.text_field :zip %>
  <%=f.submit "Add Customer", :class => "btn btn-primary" %>
<% end %>